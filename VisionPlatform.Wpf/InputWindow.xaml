<Window x:Class="VisionPlatform.Wpf.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:VisionPlatform.Wpf"
        Title="输入窗口"
        mc:Ignorable="d" Height="106" Width="148.333" MinHeight="150" MinWidth="300" MaxHeight="150">
    <Grid>
        <StackPanel Margin="10,20">
            <DockPanel Margin="0,10,0,0">
                <TextBlock Margin="0,0,10,0">文件名称</TextBlock>
                <TextBox x:Name="InputTextBox" MinWidth="200"></TextBox>
            </DockPanel>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
                <Button MinWidth="60" Margin="10,0,0,0" Click="AcceptButton_Click">确认</Button>
                <Button MinWidth="60" Margin="10,0,0,0" Click="CancelButton_Click">取消</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
